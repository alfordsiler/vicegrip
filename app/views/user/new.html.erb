<div class="container">
  <h2>Sign Up</h2>
  <%= link_to "<< Home", root_path %>
  <br><br>

  <%= form_for :user do |u| %>
  <div>
    <%= u.label :name %>
    <%= u.text_field :name :required => true %>    
  </div>
  <div>
    <%= u.label :email %>
    <%= u.email_field :email :required => true %>
  </div>
  <div>
    <%= u.label :pasword %>
    <%= u.password_field :password :required => true %>
  </div>

  <%= u.submit %>

  <% end %>
</div>