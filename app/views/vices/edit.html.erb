<h2>Edit <%= @vice.vice_name %></h2>

<%= form_for @vice do |v| %>
	<div>
		<%= v.label :vice_name %>
		<%= v.text_field :vice_name %> 
	</div>
	<div>
		<%= v.label :vice_cost %>
		<%= v.text_field :vice_cost %> 
	</div>
	<div>
		<%= v.label :goal_name %>
		<%= v.text_field :goal_name %> 
	</div>
	<div>
		<%= v.label :goal_cost %>
		<%= v.text_field :goal_cost %> 
	</div>
	<%= v.submit %>

<% end %>

<%= link_to "Back to all vices", "/vices" %>